

<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Project Name</th>
        <th>Description</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <% if project.user == current_user %>
        <tr>
          <td>
<%= link_to project.name, project %>


          </td>
          
          <td><%= project.description %></td>
          
          <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Project', new_project_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello World!</h1>
This is my first Rails Webpage...

<% end %>
