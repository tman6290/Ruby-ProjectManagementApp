<div class="jumbotron">
  <h1 class="display-4">
    <%= @project.name %>
  </h1>
  <p class="lead">
    <%= @project.description %> 
  </p>
  <br/>

  <%= link_to 'Edit', edit_project_path(@project), class:"btn btn-secondary" %>
  <%= link_to 'Delete', @project, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <%= link_to 'Back', projects_path, class:"btn btn-dark" %>

  <br/>
  <br/>
  <!-- Bootstrap-styled Pagination Links -->
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <% if @prev_project %>
        <li class="page-item">
          <%= link_to 'Previous', project_path(@prev_project), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <a class="page-link" href="#">Previous</a>
        </li>
      <% end %>

      <!-- Numeric page links can be omitted or customized as needed -->

      <% if @next_project %>
        <li class="page-item">
          <%= link_to 'Next', project_path(@next_project), class: "page-link" %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <a class="page-link" href="#">Next</a>
        </li>
      <% end %>
    </ul>
  </nav>
  
</div>
